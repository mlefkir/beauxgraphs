##-----------------------------------------------
##-                 GRIDS                       -
##-----------------------------------------------

grid.color:     7E7E7E  
grid.linestyle: dashed  
grid.linewidth: 0.8     
grid.alpha:     0.4   

##-----------------------------------------------
##-                 TICKS                       -
##-----------------------------------------------

xtick.top:     True
xtick.bottom:  True
xtick.major.size: 10
xtick.minor.size: 5
xtick.direction: in
xtick.labelsize : 20
xtick.minor.width : 1.5
xtick.major.width : 1.5


ytick.labelsize : 20
ytick.left:     True
ytick.right:    True
ytick.major.size: 10
ytick.minor.size: 5
ytick.direction: in 
ytick.major.width : 1.5
ytick.minor.width : 1.5

##-----------------------------------------------
##-                 LEGEND                      -
##-----------------------------------------------

legend.frameon:       False

##-----------------------------------------------
##-                 FIGURES                     -
##-----------------------------------------------

figure.titleweight : bold
figure.figsize:     5, 3.5
